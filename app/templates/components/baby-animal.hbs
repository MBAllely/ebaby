<div class="babyAnimal panel panel-default">
  <div class="panel-heading">
    <h3>{{baby.name}}</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-6">
        <h4><strong>Category:</strong> {{baby.category}}</h4>
        <h4><strong>Description:</strong> {{baby.description}}</h4>
        <h4><strong>Price:</strong> ${{baby.price}}</h4>
        {{#if baby.inBasket}}
          <button class="btn btn-primary" disabled>In your Cart</button>
        {{else}}
          <button class="btn btn-primary" {{action 'addToBasket' baby}}>Add to Cart</button>
        {{/if}}
      </div>
      <div class="col-sm-6">
        <img src="{{baby.image}}" alt="{{baby.name}}" />
      </div>
    </div>
  </div>
</div>
