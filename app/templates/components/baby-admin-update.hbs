{{#if updateShowing}}
<form>
  <div class="form-group">
    <label for="name">Name</label>
    {{input value=baby.name id="name"}}
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    {{input value=baby.price id="price"}}
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    {{input value=baby.description id="description"}}
  </div>
  <div class="form-group">
    <label for="image">Image URL</label>
    {{input value=baby.image id="image"}}
  </div>
  <div class="form-group">
    <label for="category">Category</label>
    {{input value=baby.category id="category"}}
  </div>
  <button {{action 'save' baby}}>Save</button>
  <button {{action 'hideForm'}}>Cancel</button>
</form>
{{/if}}
